{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "Compilar C++",
		"type": "shell",
		"command": "g++",
		"args": [
		  "-std=c++11",
		  "-Wall",
		  "-Wextra",
		  "${workspaceFolder}/Proyecto/Autor.cpp",
		  "${workspaceFolder}/Proyecto/Libro.cpp",
		  "${workspaceFolder}/Proyecto/Validaciones.cpp",
		  "${workspaceFolder}/Proyecto/main.cpp",
		  "-o",
		  "${workspaceFolder}/Proyecto/output/main.exe"
		],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"problemMatcher": ["$gcc"],
		"detail": "Compilaci√≥n de C++ con GCC"
	  }
	]
  }
  